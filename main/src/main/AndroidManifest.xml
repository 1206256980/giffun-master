<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.quxianggif">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>

    <application>

        <activity
            android:name=".feeds.ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GifFun.MainActivity"/>
        <activity
            android:name=".feeds.ui.PostFeedActivity"
            android:label="@string/post_fun_pic"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".feeds.ui.SelectGifActivity"
            android:label="@string/pick_gif_pic"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".common.ui.AlbumActivity"
            android:label="@string/your_album"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".feeds.ui.FeedDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GifFun.FeedDetailActivity"/>
        <activity
            android:name=".user.ui.UserHomePageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GifFun.UserHomePageActivity">
        </activity>
        <activity
            android:name=".user.ui.ModifyUserInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GifFun"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".comments.ui.CommentsActivity"
            android:label="@string/all_comments"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".user.ui.FollowshipActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".user.ui.BrowserPhotoActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".feeds.ui.RepostFeedActivity"
            android:label="@string/repost"
            android:screenOrientation="portrait"
