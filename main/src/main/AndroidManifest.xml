        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CropImageActivity"/>
        <activity
            android:name=".settings.ui.SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait"
            android:theme="@style/GifFun.SettingsActivity"/>
        <activity
            android:name=".feeds.ui.DraftActivity"
            android:label="@string/draft_box"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".settings.ui.OpenSourceProjectsActivity"
            android:label="@string/open_source_project_list"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".common.ui.WebViewActivity"
            android:label="@string/title_about"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".feeds.ui.SearchActivity"
            android:theme="@style/GifFun.SearchActivity">
        </activity>
        <activity
            android:name=".report.ReportActivity"
            android:screenOrientation="portrait">
        </activity>

        <meta-data
            android:name="com.quxianggif.util.glide.GifFunModule"
            android:value="GlideModule"/>

    </application>

</manifest>